/* pages/index/index.wxss */
.indexContainer .header{
  display: flex;
  padding: 5rpx;

}
.header .iconfont{
  position: absolute;
  left: 36%;
  top: 2%;

}
.indexContainer .header .search{
  border: 1rpx solid #eee;
  /* fles=x-grow:可拉伸 flex-shrink 可压缩 flex-basis当前元素宽度 */
  /* flex默认值 fles=x-grow：0,flex-shrink:1,flex-basis:auto */
  /* flex:1-- fles=x-grow：1,flex-shrink:1,flex-basis:0%*/
   /* flex:auto-- fles=x-grow：1,flex-shrink:1,flex-basis：auto*/
  /* flex:1 会导致父元素宽度自动为100% */
  flex:1;
  margin:0 5rpx;
  border-radius: 10%;
  font-size: 30rpx;
  text-align: center;
  line-height: 65rpx;
  color: #d43c33;
}
.banners{
  width: 100%;
  height:300rpx;
  padding-bottom: 20rpx;
}
.banners image{
  width: 100%;
  height:100%;
}
/* 三个图标导航区域 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 35%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: #f72f25;
  font-size: 50rpx;
  color: #fff;
  margin: 5rpx 0;
}
.navItem text{
  font-size: 26rpx;
}
 .head{
  padding-bottom: 20rpx;
}
 .head .title{
font-size: 32rpx;
line-height: 80rpx;
color: #666;
}
 .head .more{
  float: right;
  border: 1rpx solid #333;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
}
/* 推荐歌单 */
.recommendContainer{
  padding: 20rpx;
}
/* 推荐内容区 */
.recommendScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
  
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /*设置对齐 */
   -webkit-line-clamp: 2; /*设置多行行数 */ 
}
/* 排行榜 */
.topList{
 padding: 20rpx;
}
.topListSwiper{
  height: 400rpx;
}
.swiperItem{
  width: 96%;
  background: #fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius:6rpx;
}
.musicItem .count{
width: 100rpx;
height: 100rpx;
text-align: center;
line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}